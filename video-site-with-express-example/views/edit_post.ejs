<%- include('partials/_header.ejs') %>

<div class="container-fluid px-0">
    <div class="mx-auto tm-content-container">
        <div class="row mt-3 mb-5 pb-3">
            <div class="col-12">
                <div class="mx-auto tm-about-text-container px-3">
                    <h2 class="tm-page-title mb-4 tm-text-primary">Add New Photo</h2>
                </div>
            </div>
        </div>
        <div class="mx-auto pb-3 tm-about-text-container px-3">
            <div class="row">
                <div class="col-lg-12 mb-5">
                    <form action="/update-post/<%= photo.id %>" method="POST" class="tm-contact-form" enctype="multipart/form-data">
                        <div class="form-group">
                            <input type="text" name="title" class="form-control rounded-0" placeholder="Title" value="<%= photo.title %>"/>
                        </div>
                        <div class="form-group">
                            <input type="text" name="description" class="form-control rounded-0"
                                   placeholder="Description" value="<%= photo.description %>"/>
                        </div>
                        <div class="form-group">
                            <img src="<%= photo.image %>" alt="image" class="w-100">
                            <input type="file" name="photo">
                        </div>
                        <div class="form-group mb-0">
                            <button type="submit"
                                    class="btn btn-primary rounded-0 d-block ml-auto mr-0 tm-btn-animate tm-btn-submit tm-icon-submit">
                                <span>Submit</span></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

